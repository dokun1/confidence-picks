{
  "name": "confidence-picks-backend",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "node --watch src/app.js",
    "start": "node src/app.js",
    "db:init": "node src/database/init.js",
    "cleanup:invites": "node src/scripts/cleanupInvites.js",
    "test": "node --test tests/*.test.js",
    "test:db": "node --test tests/db-init.test.js",
    "test:server": "node --test tests/server.test.js",
    "test:routes": "node --test tests/routes.test.js",
    "test:structure": "node --test tests/structure.test.js",
    "test:setup": "docker-compose -f docker-compose.test.yml up -d",
    "test:teardown": "docker-compose -f docker-compose.test.yml down -v",
    "test:full": "npm run test:setup && sleep 15 && NODE_ENV=test npm run db:init && NODE_ENV=test npm run test && npm run test:teardown"
  },
  "dependencies": {
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^17.0.0",
    "express": "^4.18.2",
    "express-session": "^1.17.3",
    "jsonwebtoken": "^9.0.2",
    "node-jose": "^2.2.0",
    "passport": "^0.7.0",
    "passport-apple": "^2.0.2",
    "passport-google-oauth20": "^2.0.0",
    "pg": "^8.16.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
